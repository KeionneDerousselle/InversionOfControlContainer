
@{
    Layout = null;
}

<div>
    <script type="text/ng-template" id="LogExerciseModalTemplate.html">
        <div class="modal-header">
            <h3 class="modal-title">Add Exercise To Your Log</h3>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1"></div>
                <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <input type="text" required class="form-control" placeholder="Exercise Name">
                        </div>
                        <div class="form-group">
                            <input type="number" min="0" step="1" required class="form-control" placeholder="Calories Lost">
                        </div>
                    </form>
                </div>
                <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1"></div>
            </div>
        </div>

        <div class="modal-footer">
            <button class="btn btn-primary" ng-click="ok()">OK</button>
            <button class="btn btn-warning" ng-click="cancel()">Cancel</button>
        </div>
    </script>

    <button type="button"
            ng-click="openLogExerciseModal();"
            class="btn btn-info"
            tooltip="Log Exercise"
            tooltip-placement="top">
        <span class="glyphicon glyphicon-minus"></span>
    </button>
</div>
